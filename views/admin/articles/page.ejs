<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/homenavbar.ejs') %>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article=>{ %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%=article.slug%>" class="btn btn-info">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){ %>
                    <a class="btn btn-info" style="float:left" href="/articles/page/<%= result.page - 1 %>">Anterior</a>
                <% }else if(result.page == 2){ %>
                    <a class="btn btn-info" style="float:left" href="/">Anterior</a>
                <% } %>
                <% if(result.next){ %>
                    <a class="btn btn-info" style="float:right" href="/articles/page/<%= result.page + 1 %>">Pr√≥ximo</a>
                <% } %>
            </div>
        </div>
        <hr>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>